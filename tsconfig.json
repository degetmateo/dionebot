{
  "compilerOptions": {
    "target": "ES2021",                     
    "module": "CommonJS",                  
    "lib": ["ES2021"],           
    "moduleResolution": "node",
    "esModuleInterop": true,   
    "forceConsistentCasingInFileNames": true,    
    "strict": true,                              
    "skipLibCheck": true,                        
    "resolveJsonModule": true,                  
    "outDir": "./js",                  
    "rootDir": "./src",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}