{
  "compilerOptions": {
    "target": "ES2021",                          // Soporte moderno para async/await, etc.
    "module": "CommonJS",                        // O "ESNext" si us치s imports ES
    "lib": ["ES2021", "DOM"],                           // Incluye las APIs de ES2021
    "moduleResolution": "node",
    "esModuleInterop": true,                     // Permite importar m칩dulos CommonJS
    "forceConsistentCasingInFileNames": true,    
    "strict": true,                              // Habilita verificaci칩n estricta de tipos
    "skipLibCheck": true,                        // Acelera la compilaci칩n (ignora type defs de libs)
    "resolveJsonModule": true,                   // Permite importar archivos .json
    "outDir": "./js",                          // Carpeta de salida del JS compilado
    "rootDir": "./src",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}